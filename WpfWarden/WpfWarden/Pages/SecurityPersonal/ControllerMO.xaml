<Page x:Class="WpfWarden.Pages.SecurityPersonal.ControllerMO"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfWarden.Pages.SecurityPersonal"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ControllerMO">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" ></RowDefinition>
            <RowDefinition Height="1"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock x:Name="txtFIO" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0 0 5 5" FontSize="20"></TextBlock>
        <Grid Grid.Row="1" Background="Black"></Grid>
        <StackPanel Grid.Row="2" HorizontalAlignment="Center" Margin="0 20">
            <Button x:Name="btnUsersList" Width="200" Height="34" Content="Users list" Margin="0 8"></Button>
            <Button x:Name="btnUsersEnterHistory" Width="200" Height="34" Content="Users enter history" Margin="0 8"></Button>
        </StackPanel>
    </Grid>
</Page>
